
@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row" style="margin-top:20px">
        <div class="col-xs-12 col-sm-8 col-md-6 col-sm-offset-2 col-md-offset-3">
            <form role="form" action="@Url.Action("Register","Account")" method="post">
                <fieldset>
                    <h2>Kayıt Sayfası</h2>
                    <hr class="colorgraph">
                    <div class="form-group">
                        <input type="email" name="email" id="email" class="form-control input-lg" placeholder="Email Adres">
                    </div>
                    <div class="form-group">
                        <input type="password" name="password" id="password" class="form-control input-lg" placeholder="Şifre">
                    </div>
                    <hr class="colorgraph">
                    <div class="row">
                        <div class="col-xs-6 col-sm-6 col-md-6">
                            <input type="submit" class="btn btn-lg btn-success btn-block" value="Kaydol">
                        </div>
                        <div class="col-xs-6 col-sm-6 col-md-6">
                            <a href="@Url.Action("Login","Account")" class="btn btn-lg btn-primary btn-block">Giriş Yap</a>
                        </div>
                    </div>
                </fieldset>
            </form>
        </div>
    </div>
</div>